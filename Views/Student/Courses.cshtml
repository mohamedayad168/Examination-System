@model IEnumerable<StudentCourse>

@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h1>Courses</h1>

<div>
    <hr />
        <div class="col-12">
        @foreach (var course in Model)
        {
                    <div class="card mb-3">
                        <div class="card-header">@course.Crs.CrsName</div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                        @if (course.Grade == null)
                        {
                                        <p>Not yet graded</p>
                                        <a asp-action="Exam" asp-route-crsId="@course.CrsId" class="btn btn-danger">Take Exam</a>
                        }
                        else
                        {
                                        <p>Grade: @course.Grade</p>
                                        @* <a asp-action="Results" asp-controller="Student" class="btn btn-info">Result</a> *@

                        }
                            </blockquote>
                        </div>
                    </div>
        }
        </div>
</div>